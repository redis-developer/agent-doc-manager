<div
  class="flex h-full w-full"
  hx-ext="ws"
  ws-connect="/chat"
  hx-on:htmx:ws-after-message="document.querySelector('main').scrollTo(0, document.querySelector('main').scrollHeight)">
    {{> chat/sidebar/sidebar}}
    <main class="flex-1 flex flex-col h-full w-full bg-white overflow-y-scroll">
        {{> header}}
        {{> chat/chat}}
    </main>
    <section id="logContainer" class="hidden">
      {{> logPopup }}
    </section>
    {{> showLogs }}
</div>
